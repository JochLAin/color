{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/mjs",
    "sourceMap": true,
    "module": "ES2020",
    "target": "ES2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./lib"],
  "exclude": ["node_modules"]
}
